{
  "name": "starter",
  "version": "0.1.0",
  "description": "A starter for JS project",
  "main": "src/index.js",
  "scripts": {
    "lint": "eslint src",
    "lint:fix": "npm run lint -- --fix",
    "test": "npm run lint:fix && npm run testonly",
    "testonly": "jest",
    "testonly:cov": "jest --coverage",
    "testonly:watch": "jest --watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kpman/starter.git"
  },
  "author": "kpman",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-eslint": "^7.2.1",
    "babel-jest": "^20.0.3",
    "eslint": "^4.4.1",
    "eslint-config-prettier": "^2.3.0",
    "eslint-config-yoctol": "^0.14.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-prettier": "^2.2.0",
    "eslint-plugin-react": "^7.2.1",
    "jasmine-reporters": "^2.2.1",
    "jest": "^20.0.4",
    "prettier": "^1.5.3"
  },
  "dependencies": {
    "babel-preset-yoctol": "^0.6.0",
    "cross-env": "^5.0.5"
  },
  "jest": {
    "moduleNameMapper": {
      "^test/(.*)": "<rootDir>/test/helpers/$1.js"
    },
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/__tests__/"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 87,
        "functions": 87,
        "lines": 87,
        "statements": 87
      }
    },
    "setupTestFrameworkScriptFile": "<rootDir>/test/setup-jasmine-env.js",
    "transformIgnorePatterns": [
      "/node_modules/"
    ],
    "testEnvironment": "node"
  }
}
